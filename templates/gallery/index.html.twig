{% extends 'base.html.twig' %}

{% block title %}Galerie{% endblock %}

{% block banner %}
<section class="banner text-center shadow">
    <div class="banner-filter">
        <div class="d-flex justify-content-center align-items-center h-100">
            <h1>Galerie de photos</h1>
        </div>
    </div>
</section>
{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="row g-4">
        {% for gallery in galleries %}
        <div class="col-12 col-mg-6 col-lg-4">
            <div class="card text-bg-dark">
                <img src="https://picsum.photos/300/200" alt="" class="card-img">
                <div class="card-img-overlay d-flex justify-content-between align-items-end">
                    <div>
                        <div>{{ gallery.event.title }}</div>
                        <div>Date de l'événement</div>
                    </div> 
                    <a href="{{ path('app_gallery_show', {id: gallery.id, slug: gallery.slug}) }}" class="btn btn-sm btn-secondary">Voir les photos</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
