{% extends 'base.html.twig' %}

{% block title %}Galerie{% endblock %}

{% block banner %}
<section class="banner text-center shadow">
    <div class="banner-filter">
        <div class="d-flex justify-content-center align-items-center h-100">
            <h1>Galerie de photos</h1>
        </div>
    </div>
</section>
{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row g-5 mb-4">
        {% for gallery in galleries %}
        <div class="col-12 col-mg-6 col-lg-4">
            <div class="card text-bg-dark">
                <img src="https://picsum.photos/300/200" alt="" class="card-img">
                <div class="card-img-overlay banner-filter">
                    <div class="d-flex justify-content-between flex-column h-100">
                        <div class="text-end">{{ gallery.event.title }}</div>
                        <div class="d-flex justify-content-between align-items-end">
                            {{ gallery.event.occuresAt | date("d/m/Y") }}
                            <a href="{{ path('app_gallery_show', {id: gallery.id, slug: gallery.slug}) }}" class="btn btn-sm btn-secondary"><i class="fa-solid fa-eye pe-2"></i>Voir les {{ gallery.images|length }} photos</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(galleries,'@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
    </div>
</div>
{% endblock %}
