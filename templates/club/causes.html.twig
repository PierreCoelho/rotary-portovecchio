{% extends 'base.html.twig' %}

{% block title %}Nos causes{% endblock %}

{% block banner %}
<section class="banner text-center shadow">
    <div class="banner-filter">
        <div class="d-flex justify-content-center align-items-center h-100">
            <h1>Les causes que nous d√©fendons</h1>
        </div>
    </div>
</section>
{% endblock %}

{% block body %}
    <div class="container my-4">
        <section class="row row-cols-3 g-4">
        {% for section in page.sections %}
                <div class="col">
                    <a href="#{{ section.title|slug }}" class="text-decoration-none">
                        <div class="rounded shadow text-center py-3 causes">
                            {% if section.thumbnailName is not null %} <img src="{{ vich_uploader_asset(section, 'thumbnailFile')|imagine_filter('causes_mini') }}" alt="{{ section.title }}" class="rounded-circle"> {% endif %}
                            <h2 class="h3 mt-2">{{ section.title }}</h2>
                        </div>
                    </a>
                </div>
        {% endfor %}
        </section>

        {{ include('club/_sections.html.twig') }}
    </div>
{% endblock %}
