{% if page.sections is empty and app.request.get('_route') != 'app_club_members' %}
    <section class="my-5 py-3 rounded shadow">
        <h2 class="text-center">Cette partie est actuellement en cours de r√©daction</h2>
    </section>
{% else %}
    {% for section in page.sections %}
    <section class="my-5 d-flex justify-content-between py-3 rounded shadow">
        {% if loop.index is odd %}
        {% if section.thumbnailName is not null %} <div class="col-4 mx-3"><img src="{{ vich_uploader_asset(section, 'thumbnailFile')|imagine_filter('static_thumb') }}" alt="{{ section.title }}" class="w-100"></div>{% endif %}
        <div class="mx-3" {% if section.page.name == 'causes' %} id="{{ section.title|slug }}" {% endif %}>
            {% if section.title is not null %}<h2 class="text-center">{{ section.title }}</h2>{% endif %}
            {{ section.content|raw }}
        </div>
        {% else %}
        <div class="mx-3" {% if section.page.name == 'causes' %} id="{{ section.title|slug }}" {% endif %}>
            {% if section.title is not null %}<h2 class="text-center">{{ section.title }}</h2>{% endif %}
            {{ section.content|raw }}
        </div>
        {% if section.thumbnailName is not null %} <div class="col-4 mx-3"><img src="{{ vich_uploader_asset(section, 'thumbnailFile')|imagine_filter('static_thumb') }}" alt="{{ section.title }}" class="w-100"></div>{% endif %}
        {% endif %}
    </section>
    {% endfor %}
{% endif %}