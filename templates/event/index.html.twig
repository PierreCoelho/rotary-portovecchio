{% extends 'base.html.twig' %}

{% block title %}
    {% if state == 'passes' %}
        Les actions déjà menées
    {% else %}
        Les actions à venir
    {% endif %}
{% endblock %}

{% block banner %}
<section class="banner text-center shadow">
    <div class="banner-filter">
        <div class="d-flex justify-content-center align-items-center h-100">
            <h1>
            {% if state == 'passes' %}
                Les actions déjà menées
            {% else %}
                Les actions à venir
            {% endif %}
            </h1>
        </div>
    </div>
</section>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for event in events %}
            <div class="col">
                <div class="card h-100 shadow">
                    <img src="https://picsum.photos/200/300?random={{ event.id }}" alt="Image d'illustration de l'événement {{ event.title }}" class="object-fit-cover card-img-top" style="height:275px">
                    <div class="card-body">
                        <h2 class="card-title h4 text-center">{{ event.title }}</h2>
                        <div class="d-flex justify-content-around date">
                            <div class="d-flex flex-column mx-3 text-center">
                                <div><i class="fa-regular fa-calendar h4"></i></div>
                                <p>{{ event.occuresAt|date("d/m/Y") }}</p>
                            </div>
                            <div class="d-flex flex-column mx-3 text-center">
                                <div><i class="fa-regular fa-clock h4"></i></div>
                                <p>{{ event.occuresAt|date("H\\hi") }}</p>
                            </div>
                        </div>
                        <p class="card-text">{{ event.description|raw }}</p>
                        <div class="text-end"><a type="button" class="btn btn-warning" href="{{ path('app_event_show',{slug:event.slug, id:event.id}) }}">Voir le détail</a></div>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}
