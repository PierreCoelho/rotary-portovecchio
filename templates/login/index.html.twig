{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <div class="container my-4">
        {% if error %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endif %}
        <form action="{{ path('app_login') }}" method="post" class="w-50 m-auto">
            <label for="username" class="form-label">Email:</label>
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}">

            <label for="password" class="form-label mt-3">Mot de passe:</label>
            <input type="password" id="password" class="form-control" name="_password">

            <div class="my-3 form-check text-center">
                <label>
                    <input type="checkbox" name="_remember_me" checked/>
                    Se rappeler de moi
                </label>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"> #}

            <div class="text-center"><button type="submit" class="btn btn-primary">Se connecter</button></div>
        </form>
    </div>
{% endblock %}
