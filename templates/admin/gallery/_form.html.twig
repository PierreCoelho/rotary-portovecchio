{{ form_start(form) }}
    {{ form_row(form.event) }}
    <h2>Images</h2>
    {% if app.request.attributes.get('_route') == 'admin_gallery_edit' %}
        <div class="row g-4 mb-3">
        {% for image in gallery.images %}
            <div class="col-2 text-center">
                <img src="{{ vich_uploader_asset(image, 'file') | imagine_filter('mini')}}" alt="{{ gallery.event.title }}">
                <a href="{{ path('admin_image_delete', {id: image.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}"><i class="fa-solid fa-trash-can"></i></a>
                {# <form method="post" action="{{ path('admin_image_delete', {id: image.id}) }}" class="d-inline-block">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete' ~ image.id) }}">
                    <button class="btn btn-sm btn-danger mt-2"><i class="fa-solid fa-trash-can"></i> Supprimer</button>
                </form> #}
            </div>
        {% endfor %}
        </div>
    {% endif %}
    {{ form_row(form.images) }}
    <button class="btn btn-primary">{{ button |default('Enregistrer') }}</button>
{{ form_end(form) }}