{{ form_start(form) }}
    <div class="row">
        <div class="col-6">{{ form_row(form.email) }}</div>
        <div class="col-6">{{ form_row(form.roles) }}</div>
    </div>
    <div class="row">
        <div class="col-6">{{ form_row(form.first_name) }}</div>
        <div class="col-6">{{ form_row(form.last_name) }}</div>
    </div>
    <div class="row">
        <div class="col-6">{{ form_row(form.plainPassword.first) }}</div>
        <div class="col-6">{{ form_row(form.plainPassword.second) }}</div>
    </div>
    <div class="text-center mt-3"><button class="btn btn-primary"><i class="fa-solid fa-floppy-disk pe-2"></i>{{ button |default('Enregistrer') }}</button></div>
{{ form_end(form) }}