{{ form_start(form) }}
    {% if form.vars.value.thumbnailName is not null %}
        <div>
            <img src="{{ vich_uploader_asset(form.vars.value, 'thumbnailFile') | imagine_filter('mini')}}" alt="{{ form.vars.value.title }}">
            {# <a href="{{ path('admin_section_image_delete', {id: section.vars.value.id}) }}" data-image-delete data-token="{{ csrf_token('delete' ~ section.vars.value.id) }}"><i class="fa-solid fa-trash-can"></i></a> #}
        </div>
    {% endif %}
    {{ form_row(form.thumbnailFile) }}
    {{ form_row(form.title) }}
    <div class="row">
        <div class="col-6">{{ form_row(form.occures_at) }}</div>
        <div class="col-6">{{ form_row(form.location) }}</div>
    </div>
    {{ form_row(form.description) }}
    <div class="text-center"><button class="btn btn-primary"><i class="fa-solid fa-pen-to-square pe-2"></i>{{ button |default('Enregistrer') }}</button></div>
{{ form_end(form) }}